{
    "files.autoSave": "onFocusChange",
    "saveAndRun": {
        "commands": [
          {
            "match": "dockerfile|Makefile",
            "cmd": "make",
            "useShortcut": false,
            "silent": false
          },
          {
            "match": "\\.txt$",
            "cmd": "echo 'I am a .txt file ${file}.'",
            "useShortcut": false,
            "silent": false
          }
        ]
      }
}